# Docker Environment Configuration
# Copy this to .env.production for production deployments

# Database Configuration (automatically set in docker-compose)
DATABASE_URL=postgresql+asyncpg://threat_user:secure_password_123@postgres:5432/threat_modeling

# Redis Configuration (automatically set in docker-compose)
REDIS_URL=redis://redis:6379/0

# CORS Configuration
CORS_ORIGINS=http://localhost:3001,http://localhost:3000,http://web:3000

# LLM Provider Configuration
# Ollama (local - runs in Docker)
OLLAMA_BASE_URL=http://ollama:11434
DEFAULT_OLLAMA_MODEL=llama2:7b

# Azure OpenAI (add your keys)
AZURE_OPENAI_API_KEY=your_azure_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Scaleway (add your keys)
SCALEWAY_API_KEY=your_scaleway_key_here
SCALEWAY_ENDPOINT=https://api.scaleway.ai/v1/

# Pipeline Step Configuration
STEP1_MODEL=llama2:7b
STEP1_PROVIDER=ollama
STEP2_MODEL=llama2:7b
STEP2_PROVIDER=ollama
STEP3_MODEL=llama2:7b
STEP3_PROVIDER=ollama

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.md

# Security Configuration
SECRET_KEY=your_secret_key_for_jwt_tokens_change_in_production
ENVIRONMENT=docker

# Logging Configuration
LOG_LEVEL=INFO
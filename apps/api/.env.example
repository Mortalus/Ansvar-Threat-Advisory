# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# CORS
CORS_ORIGINS=http://localhost:3000

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,docx,txt

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379

# LLM Configuration - General
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
STEP1_OLLAMA_MODEL=llama2
STEP2_OLLAMA_MODEL=llama2
STEP3_OLLAMA_MODEL=llama2
STEP4_OLLAMA_MODEL=llama2
STEP5_OLLAMA_MODEL=llama2

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview
STEP1_AZURE_MODEL=gpt-4
STEP2_AZURE_MODEL=gpt-4
STEP3_AZURE_MODEL=gpt-4
STEP4_AZURE_MODEL=gpt-4
STEP5_AZURE_MODEL=gpt-4

# Scaleway Configuration
SCALEWAY_API_KEY=your-api-key
SCALEWAY_ENDPOINT=https://api.scaleway.ai/v1
STEP1_SCALEWAY_MODEL=llama-3.1-70b
STEP2_SCALEWAY_MODEL=llama-3.1-70b
STEP3_SCALEWAY_MODEL=llama-3.1-70b
STEP4_SCALEWAY_MODEL=llama-3.1-70b
STEP5_SCALEWAY_MODEL=llama-3.1-70b

# Default LLM Provider per step
STEP1_LLM_PROVIDER=ollama
STEP2_LLM_PROVIDER=ollama
STEP3_LLM_PROVIDER=azure
STEP4_LLM_PROVIDER=azure
STEP5_LLM_PROVIDER=scaleway